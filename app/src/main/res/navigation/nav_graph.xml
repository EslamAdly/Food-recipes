<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.ratatouille.homePage.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.ratatouille.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.ratatouille.favoriteMeals.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/planFragment"
        android:name="com.example.ratatouille.planMeals.PlanMealsFragment"
        android:label="fragment_plan_meals"
        tools:layout="@layout/fragment_plan_meals" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.ratatouille.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/displayIngredients"
        android:name="com.example.ratatouille.displayIngredients.DisplayIngredients"
        android:label="fragment_display_ingredients"
        tools:layout="@layout/fragment_display_ingredients" />
</navigation>